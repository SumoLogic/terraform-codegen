<settings>
  <mirrors>
    <mirror>
      <!--This sends everything else to /public -->
      <id>artifactory</id>
      <mirrorOf>*</mirrorOf>
      <url>${ARTIFACTORY_CONTEXT_URL}/repo</url>
    </mirror>
  </mirrors>
  <profiles>
    <profile>
      <id>artifactory</id>
      <!--Enable snapshots for the built in central repo to direct -->
      <!--all requests to artifactory via the mirror -->
      <repositories>
        <repository>
          <id>central</id>
          <url>https://central</url>
          <releases><enabled>true</enabled></releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>central</id>
          <url>https://central</url>
          <releases><enabled>true</enabled></releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
  <activeProfiles>
    <!--make the profile active all the time -->
    <activeProfile>artifactory</activeProfile>
  </activeProfiles>

  <servers>
    <server>
      <id>central</id>
      <username>${ARTIFACTORY_USR}</username>
      <password>${ARTIFACTORY_PSW}</password>
      <configuration>
        <httpConfiguration>
          <all>
            <params>
              <param>
                <name>http.authentication.preemptive</name>
                <value>%b,true</value>
              </param>
            </params>
          </all>
        </httpConfiguration>
      </configuration>
    </server>
    <server>
      <id>snapshots</id>
      <username>${ARTIFACTORY_USR}</username>
      <password>${ARTIFACTORY_PSW}</password>
      <configuration>
        <httpConfiguration>
          <all>
            <params>
              <param>
                <name>http.authentication.preemptive</name>
                <value>%b,true</value>
              </param>
            </params>
          </all>
        </httpConfiguration>
      </configuration>
    </server>
  </servers>
</settings>
